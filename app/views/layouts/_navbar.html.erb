<!-- Collect the nav links, forms, and other content for toggling -->
<div id="nav">
  <nav class="navbar navbar-default navbar-static-top">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <%= form_tag({controller: "creators", action: "search"}, method: "get", class: "navbar-form navbar-left") do %>
      <div class="form-group">
        <%= text_field_tag "query", params[:query], placeholder: "Search", class: "form-control" %>
      </div>
      <% ['vimeo', 'twitter'].each do |api| %>
        <div class="form-group">
          <%= radio_button_tag 'provider', api %>
          <%= api.humanize %>
        </div>
      <% end %>
      <%= submit_tag("Illuminate", class: "btn btn-default") %>
    <% end %>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to '<i class="fa fa-cog"></i> Feed Manager'.html_safe, user_path(@current_user.id) %></li>
      <li><%= link_to "Log Out", logout_path, method: :delete %></li>
    </ul>
    </div>
  </nav>
</div>
