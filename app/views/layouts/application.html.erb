<!DOCTYPE html>
<html>
<head>
  <title>Lynx</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Oxygen:700' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400' rel='stylesheet' type='text/css'>
</head>
<body>

  <% if !current_user.nil? %>
    <div class="container">
      <header>
        <%= image_tag("lynx2.png") %>
        <%= image_tag("paws.gif", class: "paws") %>
        <h1 class="title"><%= link_to "lynx", "/", class: "title-link brown-title" %></h1>
      </header>
      <div class="row">
        <div class="form">
          <div class="narrow">
            <div class="menu-links">
              <%= link_to "LOGOUT", logout_path, method: :delete, class: "login-out" %>
            </div>
            <div class="menu-links">
              <%= link_to "MANAGE SUBSCRIPTIONS", subscriptions_path, class: "brown-text login-out" %>
            </div>
          </div>
          <div class="form-holder">
            <div>
              <%= form_tag(search_results_path, :method => "get", class: "form-group") do %>
                <div class="col-md-4 col-md-offset-0 col-xs-offset-3 col-lg-offset-0">
                  <%= select_tag("provider", options_for_select([["Twitter", 1], ["Vimeo", 2]]), class: "form-control") %>
                </div>
            </div>
            <div>
                <div class="col-md-4 col-md-offset-0 col-xs-offset-3 col-lg-offset-0">
                  <%= text_field_tag :search_term, params[:search_term], placeholder: "Search", class: "form-control" %>
                </div>
            </div>
              <button class="btn btn-default search-button" type="submit">Search</button>
              <% end %>
            </div>
          </div
        </div>
      </div>
      <div class="container">
        <div>
          <%= render partial: "shared/flash_messages", flash: flash %>
        </div>
        <div>
          <%= yield %>
        </div>
      </div>
    <% else %>
      <%= yield %>
    <% end %>

</body>
</html>
