<!DOCTYPE html>
<html>
<head>
  <title>Lynx</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Oxygen:700' rel='stylesheet' type='text/css'>
</head>
<body>
  <div class="container">
    <h1 class="title"><%= link_to "lynx", "/", class: "title-link" %></h1>
    <% if !flash.empty? %>
      <div>
        <% flash.each do |key, value| %><%= value %>
        <% end %>
      </div>
    <% end %>

    <div class="container-fluid">
      <%= image_tag("lynx.png") %>
      <% if !current_user.nil? %>
      <div class="row">
        <%= link_to "LOGOUT", logout_path, method: :delete %>
      </div>
      <% else %>
      <div class="form-inline">
        <div class="col-lg-1 col-xs-3 nav-link-container">
          <%= link_to "LOGIN", "/auth/developer" %>
        </div>

          <%= form_tag(search_results_path, :method => "get", class: "form-group") do %>
            <%= select_tag("provider", options_for_select([["Twitter", 1], ["Instagram", 2]]), class: "form-control") %>
              <%= text_field_tag :search_term, params[:search_term], placeholder: "Search", class: "form-control" %>
                <button class="btn btn-default search-button" type="submit">Search</button>
          <% end %>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </div>

</body>
</html>
