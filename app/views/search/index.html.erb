<div class="container">
  <% if !@results.empty? %>
    <h1 class="search-results">These are your search results:</h1>
    <ul>
      <% @results.each do |result| %>
        <li class="listed-users">
          <% if twitter_result? %>
            <div class= "centered padded-top" >
              <%= result.screen_name %>
            </div>
            <div class="centered padded-bottom padded-top">
            <%= image_tag(result.profile_image_uri, class:"centered") %>
            </div>
            <% if result.protected? %>
              <p>This Twitter user is protected; you cannot subscribe to their tweets.</p>
            <% else %>
              <div class="centered">
                <%= button_to "Subscribe", subscribe_twitter_path, method: :patch, class: 'btn btn-primary', params: { screen_name: result.screen_name } %>
              </div>
            <% end %>
          <% elsif vimeo_result? %>
            <div class= "centered padded-top" >
              <%= result["name"] %>
            </div>
            <div class= "centered padded-bottom padded-top">
              <% if result["pictures"].nil? %>
                <div>
                no photo
                </div>
              <% else %>
                <%= image_tag(result["pictures"]["sizes"][1]["link"], class:"centered resized") %>
              <% end %>
            </div>
            <div class= "centered">
              <%= button_to "Subscribe", subscribe_vimeo_path, method: :patch, class: 'btn btn-primary', params: { uri: result["uri"] } %>
            </div>
          <% end %>
          <br />
        </li>
      <% end %>
    </ul>
    <% else %>
     <h1 class="search-results">No results match your search!</h1>
    <% end %>
