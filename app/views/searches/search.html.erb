<div class="row">
  <h1>
    Search Results
  </h1>
</div>

<%= @results.in_groups_of(3, false) do |group| %>
  <div class="row">
    <%= group.each do |result| %>
      <div class="col-sm-4 col-md-4">
        <% if !result["pictures"].nil? %>
          <% picture = result["pictures"]["sizes"][2]["link"] %>
          <%= image_tag(picture) %>
        <% end %>
          <br>
          name : <%= result["name"] %>
          <br>
<!--           bio:  <%= result["bio"] if !result["bio"].nil?%> -->
          <br>
      </div>
  <% end %>
  </div>
<% end %>

