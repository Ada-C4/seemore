<div class="row">
  <h1>
    Search Results
  </h1>
</div>

<% @results.in_groups_of(3, false) do |group| %>
  <div class="row">
    <% group.each do |result| %>
      <div class="col-sm-4 col-md-4 creator-col">
        <% if !result["pictures"].nil? %>
          <% picture = result["pictures"]["sizes"][2]["link"] %>
          <%= image_tag(picture, class: "creator-image") %>
        <% end %>
        <h4 class="creator-name">
          <%= result["name"] %>
        </h4>
        <%= button_to "Follow", root_path, class: "btn btn-default follow-btn" %>
      </div>
  <% end %>
  </div>
<% end %>

