<h1><%= @user_name %></h1>
<%= image_tag(@user_tweets[0].user.profile_image_url) %>
<br>
<br>

<% if @button == true %>
  <%= button_to "Subscribe", twitter_subscribe_path(@user_name), class:"btn btn-default" %>
<% else %>
  <p>You are already subscribed to this feed</p>
<% end %>

<br>
<br>

<div class="col-sm-4">
  <% @user_tweets.each do |tweet| %>
  <div class="well">
    <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
    <blockquote class="twitter-tweet" lang="en">
      <a href="https://twitter.com/<%= tweet.user.username %>/status/<%= tweet.id %>">
      </a>
    </blockquote>
  </div>
  <% end %>
</ul>
</div>
<div class="col-sm-8"></div>
