<h1> Search Results </h1>
<div class="col-sm-6">
  <% @vimeo_results.each do |search| %>
  <% photo = search["pictures"] %>
  <div class="well well-lg">
    <table width="100%">
      <tr>
        <td width="40%"><%= search["name"] %></td>
        <td width="40%">
          <% if photo!= nil %>
            <%= image_tag(photo["sizes"][1]["link"], height: '75', width: '75') %>
          <% end %>
        </td>
        <td width="40%"><%= search["bio"]%></td>
      </tr>
    </table>
  </div>
  <% end %>
  </div>
  <div class="col-sm-8"></div>
