<div class="row">
  <div class="navbar navbar-default">
    <div class="navbar-left navbar-links">
      <% if @current_user %>
        <%= link_to "Creators I Follow", creators_path %> /
        <%= link_to "Feed", root_path %> /
        <%= link_to "Logout", logout_path, method: :delete %>
      <% else %>
        Welcome to CurateTV
      <% end %>
    </div>
    <div class="navbar-right">
      <%= form_tag search_path, method: :get, class: "navbar-form navbar-right" do %>
             <%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
             <%= submit_tag "Search", class: "btn btn-default btn-search" %>
             <div class="radio-group">
              <%= radio_button_tag(:client, "Twitter", checked: true) %>
               <%= label_tag(:twitter, "Twitter") %>
              <%= radio_button_tag(:client, "Vimeo") %>
              <%= label_tag(:vimeo, "Vimeo") %>
            </div>
      <% end %>
    </div>
  </div>
</div>
